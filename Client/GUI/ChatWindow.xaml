<Window x:Class="Client.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Gal-Chat" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen">
    <!-- 主布局Grid：分为两列（左：列表区，中：聊天区） -->
    <Grid Background="#F5F5F5">
        <!-- 列定义：左列固定220px，中列占剩余空间 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧：群聊列表 + 用户列表 -->
        <Grid Grid.Column="0" Background="White" Margin="1">
            <!-- 左列内部行定义：群聊列表占1.5份，用户列表占2.5份 -->
            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="2.5*"/>
            </Grid.RowDefinitions>

            <!-- 群聊列表区域 -->
            <Border Grid.Row="0" BorderBrush="#E0E0E0" BorderThickness="0 0 0 1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- 群聊标题 -->
                    <TextBlock Grid.Row="0" Text="群聊列表" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontSize="16" FontWeight="Medium" Foreground="#333333"/>
                    <!-- 群聊列表控件 -->
                    <ListBox Grid.Row="1" x:Name="lstGroupChats" Padding="5"
                             SelectionMode="Single">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Margin="8 5" FontSize="14"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- 用户列表区域 -->
            <Border Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- 用户列表标题 -->
                    <TextBlock Grid.Row="0" Text="好友列表" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontSize="16" FontWeight="Medium" Foreground="#333333"/>
                    <!-- 用户列表控件 -->
                    <ListBox Grid.Row="1" x:Name="lstOnlineUsers" Padding="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="8 5">
                                    <!-- 在线状态圆点 -->
                                    <Ellipse Width="10" Height="10" Fill="#4CAF50" Margin="0 0 8 0"/>
                                    <TextBlock Text="{Binding}" FontSize="14"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>

        <!-- 中间：聊天区域（消息展示 + 输入框） -->
        <Grid Grid.Column="1" Margin="8">
            <!-- 中间列内部行定义：消息区占大部分，输入区自适应高度 -->
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>

            <!-- 消息展示区域（带滚动条） -->
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="0 0 0 8">
                <ListBox x:Name="lstMessages" Background="White" Padding="12"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <!-- 消息项：区分自己发送和接收的消息 -->
                            <Grid Margin="0 8">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSelf}" Value="True">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsSelf}" Value="False">
                                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <!-- 消息气泡 -->
                                <Border CornerRadius="10" Padding="12 10" MaxWidth="450">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSelf}" Value="True">
                                                    <Setter Property="Background" Value="#DCF8C6"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsSelf}" Value="False">
                                                    <Setter Property="Background" Value="White"/>
                                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                                    <Setter Property="BorderThickness" Value="1"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel>
                                        <!-- 发送者名称 -->
                                        <TextBlock Text="{Binding Sender}" FontSize="12" 
                                                   Foreground="#999999" Margin="0 0 0 3"/>
                                        <!-- 消息内容 -->
                                        <TextBlock Text="{Binding Content}" FontSize="14" 
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>

            <!-- 消息输入区域 -->
            <Grid Grid.Row="1" Background="White" Margin="0 8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <!-- 消息输入框 -->
                <TextBox x:Name="txtMessageInput" Grid.Column="0" 
                         Margin="12" VerticalAlignment="Center"
                         AcceptsReturn="True" TextWrapping="Wrap"
                         FontSize="14" VerticalScrollBarVisibility="Auto"
                         MinHeight="80" />
                <!-- 发送按钮 -->
                <Button Grid.Column="1" Content="发送"
                        Background="#0078D7" Foreground="White"
                        BorderThickness="0" FontSize="14"
                        FontWeight="Medium" Height="41" Width="80"/>
            </Grid>
        </Grid>
    </Grid>
</Window>