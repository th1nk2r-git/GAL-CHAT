<Window x:Class="Client.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Title="Gal-Chat" Height="450" Width="800" MinHeight="450" MinWidth="800" MaxHeight="450" MaxWidth="800" ResizeMode="CanMinimize">
    <Grid>
        <TextBox x:Name="UserIDTextBox" Style="{StaticResource TextBoxExtend}" hc:InfoElement.TitlePlacement="Left" hc:InfoElement.Title="用户：" HorizontalAlignment="Left" Margin="123,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="533" Height="39" MaxLength="15" FontSize="25" MaxLines="1"/>
        <TextBox x:Name="PasswordTextBox" Style="{StaticResource TextBoxExtend}" hc:InfoElement.TitlePlacement="Left" hc:InfoElement.Title="密码：" HorizontalAlignment="Left" Margin="123,182,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="533" Height="39" MaxLength="15" FontSize="25" MaxLines="1"/>
        <TextBox x:Name="UserNameTextBox" Style="{StaticResource TextBoxExtend}" hc:InfoElement.TitlePlacement="Left" hc:InfoElement.Title="昵称：" HorizontalAlignment="Left" Margin="123,256,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="39" MaxLength="15" FontSize="25" MaxLines="1"/>
        <ComboBox x:Name="SexComboBox" 
                  Style="{StaticResource ComboBoxExtend}"
                  hc:InfoElement.TitlePlacement="Left"
                  hc:InfoElement.Title="性别："
                  HorizontalAlignment="Left" 
                  Margin="466,254,0,0" 
                  VerticalAlignment="Top" 
                  Width="190" Height="41"
                  HorizontalContentAlignment="Center"
                  VerticalContentAlignment="Center"
                  FontSize="25" 
                  SelectedIndex="0">
            <ComboBoxItem>男</ComboBoxItem>
            <ComboBoxItem>女</ComboBoxItem>
            <ComboBoxItem>其他</ComboBoxItem>
        </ComboBox>
        <Button Style="{StaticResource ButtonPrimary}" hc:BorderElement.CornerRadius="15" x:Name="ComfirmButton" Content="确认" HorizontalAlignment="Left" Margin="123,346,0,0" VerticalAlignment="Top" Height="39" Width="110" FontSize="25" Click="ComfirmButton_Click"/>
        <Button Style="{StaticResource ButtonPrimary}" hc:BorderElement.CornerRadius="15" x:Name="ReturnButton" Content="返回" HorizontalAlignment="Left" Margin="546,346,0,0" VerticalAlignment="Top" Height="39" Width="110" FontSize="25" Click="ReturnButton_Click"/>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" HorizontalAlignment="Right">
            <StackPanel hc:Growl.GrowlParent="True" VerticalAlignment="Top" Margin="0,10,10,10"/>
        </ScrollViewer>
    </Grid>
</Window>
